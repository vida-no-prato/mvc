<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/vida-no-prato.css">
</head>
<body>
    <button class="cart-btn admin-btn-fixo" onclick="window.location.href='/admin'">Para Colaboradores</button>

    <header class="header">
        <div class="container">
            <nav class="nav">
                <div class="logo">Vida no Prato</div>
                <ul class="nav-links">
                    <li><a href="/">In√≠cio</a></li>
                    <li><a href="/categories">Categorias</a></li>
                    <li><a href="#produtos">Card√°pio</a></li>
                    <li><a href="/about">Sobre</a></li>
                </ul>
                <div style="display: flex; gap: 15px; align-items: center;">
                    <button class="login-btn" onclick="openAuthModal()">
                        üë§ Entrar
                    </button>
                    <button class="cart-btn" onclick="openCart()">
                        üõí Carrinho
                        <span class="cart-count" id="cartCount">0</span>
                    </button>
                </div>
            </nav>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            <section class="hero" id="inicio">
                <div class="hero-content">
                    <h1>Comida Saud√°vel, Sabor Incr√≠vel</h1>
                    <p>Descubra pratos deliciosos e nutritivos, entregues fresquinhos na sua porta</p>
                    <button class="cta-btn" onclick="document.getElementById('produtos').scrollIntoView({behavior: 'smooth'})">
                        Explorar Card√°pio
                    </button>
                </div>
            </section>

            <section class="products" id="produtos">
                <h2 class="section-title">Nosso Card√°pio</h2>

                <% if (typeof categorias !== 'undefined' && categorias.length > 0) { %>
                <div class="filter-bar" id="filterBar">
                    <button class="filter-btn active" onclick="filterProducts('todos')">Todos</button>
                    <% categorias.forEach(categoria => { %>
                        <% if (categoria && categoria.slug && categoria.nome) { %>
                            <button class="filter-btn" onclick="filterProducts('<%= categoria.slug %>')">
                                <%= categoria.emoji || 'ü•ó' %> <%= categoria.nome %>
                            </button>
                        <% } %>
                    <% }) %>
                </div>
                <% } %>

                <div class="products-grid" id="productsGrid">
                  <% if (typeof produtos !== 'undefined' && produtos.length > 0) { %>
                    <% produtos.forEach((product, index) => { %>
                      <% if (product && product.id) { %>
                        <div class="product-card" data-category="<%= product.categoria_slug || 'sem-categoria' %>" style="animation-delay: <%= index * 0.05 %>s;">
                            <img class="product-image" src="/images/default-plate.jpg" alt="<%= product.nome %>"/>
                            <div class="product-info">
                                <h3 class="product-name"><%= product.emoji || 'üç≤' %> <%= product.nome || 'Produto Indispon√≠vel' %></h3>
                                <p class="product-description"><%= product.descricao || 'Sem descri√ß√£o.' %></p>
                                <div class="product-footer">
                                    <span class="product-price">
                                      <% if (typeof product.preco === 'number') { %>
                                        R$ <%= product.preco.toFixed(2).replace('.', ',') %>
                                      <% } else { %>
                                        R$ 0,00
                                      <% } %>
                                    </span>
                                    <button class="add-to-cart" onclick="addToCart(<%= product.id %>, this)">
                                        Adicionar
                                    </button>
                                </div>
                            </div>
                        </div>
                      <% } %>
                    <% }) %>
                  <% } else { %>
                    <p style="text-align: center; width: 100%;">Nenhum produto cadastrado no momento. Volte em breve!</p>
                  <% } %>
                </div>
            </section>
        </div>
    </main>

    <%- include('partials/modals') %>

    <script>
        // Esta linha √© a forma correta de passar os dados do backend para o frontend.
        // O erro do seu editor pode ser ignorado aqui.
        const allProducts = <%- JSON.stringify(produtos || []) %>;
    </script>

    <script src="/js/script.js"></script>

    <style>
        .admin-btn-fixo { position: fixed; top: 20px; right: 30px; z-index: 2001; }
        .product-card { display: flex; flex-direction: column; opacity: 0; animation: slideInUp 0.5s ease forwards; }
        .product-card.hidden { display: none; }
        @keyframes slideInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</body>
</html>