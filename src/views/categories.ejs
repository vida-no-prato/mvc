        <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Helper para fade in/out
            function showCategoryProducts(category, gridId, btnClass, cardSelector, titleId) {
                var card = document.querySelector(cardSelector);
                var categoryGrid = document.querySelector('.category-grid');
                var boxGrid = document.getElementById(gridId);
                var container = card.closest('.categories').querySelector('.' + category + '-produtos-container');
                var voltarBtn = container.querySelector('.voltar-categorias-btn');
                var title = titleId ? document.getElementById(titleId) : null;
                boxGrid.style.display = 'none';
                voltarBtn.style.display = 'none';
                if (title) title.style.display = 'none';
                card.addEventListener('click', function(e) {
                    categoryGrid.style.transition = 'opacity 0.5s linear';
                    categoryGrid.style.opacity = '0';
                    setTimeout(function() {
                        categoryGrid.style.display = 'none';
                        if (title) title.style.display = 'block';
                        boxGrid.style.display = 'flex';
                        boxGrid.style.opacity = '0';
                        boxGrid.style.transition = 'opacity 0.5s linear';
                        voltarBtn.style.display = 'inline-block';
                        voltarBtn.style.opacity = '1';
                        setTimeout(function() {
                            boxGrid.style.opacity = '1';
                        }, 10);
                    }, 500);
                });
                voltarBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    boxGrid.style.transition = 'opacity 0.5s linear';
                    voltarBtn.style.transition = 'opacity 0.5s linear';
                    boxGrid.style.opacity = '0';
                    voltarBtn.style.opacity = '0';
                    if (title) title.style.display = 'none';
                    setTimeout(function() {
                        boxGrid.style.display = 'none';
                        voltarBtn.style.display = 'none';
                        voltarBtn.style.opacity = '1';
                        categoryGrid.style.display = 'flex';
                        categoryGrid.style.opacity = '0';
                        categoryGrid.style.transition = 'opacity 0.5s linear';
                        setTimeout(function() {
                            categoryGrid.style.opacity = '1';
                        }, 10);
                    }, 500);
                });
            }
            showCategoryProducts('salada', 'saladaBoxGrid', 'voltar-categorias-btn', '.category-card[onclick*="saladas"]');
            showCategoryProducts('bowls', 'bowlsBoxGrid', 'voltar-categorias-btn', '.category-card[onclick*="bowls"]', 'bowlsTitle');
            showCategoryProducts('sucos', 'sucosBoxGrid', 'voltar-categorias-btn', '.category-card[onclick*="sucos"]', 'sucosTitle');
            showCategoryProducts('lanches', 'lanchesBoxGrid', 'voltar-categorias-btn', '.category-card[onclick*="lanches"]', 'lanchesTitle');
        });
        </script>
