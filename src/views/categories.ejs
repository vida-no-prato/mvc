<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/vida-no-prato.css">
</head>
<body>
    <a href="/" class="btn-voltar-inicio">← Voltar ao Início</a>
    <h2 class="section-title" style="margin-top: 80px;">Nossas Especialidades</h2>

    <section class="categories" id="categorias">
        <div class="category-grid">
            <% categorias.forEach(categoria => { %>
                <a href="/?categoria=<%= categoria.slug %>" class="category-card-link">
                    <div class="category-card">
                        <span class="category-icon"><%= categoria.emoji %></span>
                        <h3><%= categoria.nome %></h3>
                        <p><%= categoria.descricao %></p>
                    </div>
                </a>
            <% }) %>
        </div>
    </section>

    <script src="/js/script.js"></script>

    <style>
        .category-card-link {
            text-decoration: none;
            color: inherit;
        }
    </style>
</body>
</html>